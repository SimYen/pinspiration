<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @user.username %>
</p>

<table>
  <thead>
    <tr>
	    <th>Pin</th>
	    <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @user.pin.each do |pin| %>
      <tr>
	      <td><img src= <%= pin.pin_url %> height="200"/></td>
	      <td><%= pin.title %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', pins_path %>